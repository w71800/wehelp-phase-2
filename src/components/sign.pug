//- .filter.active
.filter
.box_container
  #box.signin
    .box_title 登入會員帳號
    .box_cross
      img(src="{{ url_for('static', filename='imgs/icon_close.png') }}")
    form(action="", method="")
      input(
        required 
        type="text" 
        name="email" 
        id="email" 
        placeholder="輸入電子信箱" 
        )
      input(
        required 
        type="password" 
        name="password" 
        id="password" 
        placeholder="輸入密碼" )
      input(type="submit" value="登入帳戶")
    .box_hint 還沒有帳戶？
      span 點此註冊
    .sign_status
  
  #box.signup.inactive
    .box_title 註冊會員帳號
    .box_cross
      img(src="{{ url_for('static', filename='imgs/icon_close.png') }}")
    form(action="/api/user", method="POST")
      input(required type="text" name="name" id="name" placeholder="輸入姓名" )
      input(required type="text" name="email" id="email" placeholder="輸入電子信箱" )
      input(required type="password" name="password" id="password" placeholder="輸入密碼" )
      input(type="submit" value="登入帳戶")
    .box_hint 已經有帳戶了？
      span 點此登入
    .sign_status
script(src="{{ url_for('static', filename='/scripts/sign.js') }}")
  